<h2>Welcome to My Awesome Blog </h2>

<% @posts.each do |post| %>

	<div class="panel radius" >

		<h3>	<%= link_to post.title, post_path(post) %> </h3>
		<p>
			<%= link_to "edit", edit_post_path(post) %> |

			<%= link_to "delete", post_path(post), method: :delete, data: {confirm: "Are you Sure?"} %> 	

			</p>
	</div>

<% end %>
